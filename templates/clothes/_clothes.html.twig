<div class="card mb-4">
    {% if item.file %}
        <img src="{{ vich_uploader_asset(item, 'imageFile') | imagine_filter('thumbs') }}" class="card-img-top" alt="{{ item.description }}" style="width:100%; height:auto;">
    {% else %}
        {# Cette partie a été créée juste pour la mise en forme pour que tous les cards aient une image #}
        <img src="{{ asset('/images/clothes/empty.jpg') | imagine_filter('thumbs') }}" class="card-img-top" alt="{{ item.description }}" style="width:100%; height:auto;">
    {% endif %}
    <div class="card-body">
        <h5 class="card-title">
            <a href="{{ path('clothes.show', {slug: item.slug, id: item.id}) }}">{{ item.name }}</a>
        </h5>
        <p class="card-text" style="font-size:1.5rem; font-weight: bold;">{{ item.size }}</p>
        <p class="card-text">{{ item.description | nl2br }}</p>
        <div class="text-primary" style="font-size:2rem; font-weight: bold;">
            {{ item.price | number_format(0, '', ' ') }} €
        </div>
    </div>
</div>