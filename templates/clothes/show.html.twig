{% extends 'base.html.twig' %}

{% block title %}{{ clothes.name }}{% endblock %}

{% block body %}
    <!-- Product section-->
    <section class="py-5">
        <div class="container px-4 px-lg-5 my-5">
            {# Affichage d'un message pour confirmer l'envoi du mail #}
            {% for message in app.flashes('success') %}
                <div class="alert alert-success">
                    Sua mensagem foi enviada com sucesso
                </div>
            {% endfor %}

            {# Affichage d'un message d'erreur si le formulairen'est pas valide #}
            {% if not form.vars.valid %}
                <div class="alert alert-danger">
                    Erro ao preencher o formulario
                </div>
            {% endif %}
            <div class="row gx-4 gx-lg-5 align-clothess-center">
                <div class="col-md-6">
                    {# <img class="card-img-top mb-5 mb-md-0" src="https://dummyimage.com/600x700/dee2e6/6c757d.jpg" alt="..." /> #}
                    {% if clothes.file %}
                        <img src="{{ vich_uploader_asset(clothes, 'imageFile') | imagine_filter('large') }}" class="card-img-top" alt="{{ clothes.description }}" style="width:100%; height:auto;">
                    {% else %}
                        {# Cette partie a été créée juste pour la mise en forme pour que tous les cards aient une image #}
                        <img src="{{ asset('/images/clothes/empty.jpg') | imagine_filter('large') }}" class="card-img-top" alt="{{ clothes.description }}" style="width:100%; height:auto;">
                    {% endif %}
                </div>
                <div class="col-md-6">
                    <h1 class="display-5 fw-bolder">{{ clothes.name }}</h1>
                    <div class="fs-5 mb-5">
                        {# <span class="text-decoration-line-through">$45.00</span> #}
                        <span>{{ clothes.price | number_format(0, '', ' ')}}€</span>
                    </div>
                    <p class="lead">Lorem ipsum dolor sit amet consectetur adipisicing elit. Praesentium at dolorem quidem modi. Nam sequi consequatur obcaecati excepturi alias magni, accusamus eius blanditiis delectus ipsam minima ea iste laborum vero?</p>
                    <div class="d-flex">
                        <input class="form-control text-center me-3" id="inputQuantity" type="num" value="1" style="max-width: 3rem" />
                        <button class="btn btn-outline-dark flex-shrink-0" type="button">
                            Contatar o vendedor
                        </button>
                    </div>
                    <div id="contactForm" class="mt-4">
                        {{ form_start(form) }}
                            <div class="row">
                                <div class="col">{{ form_row(form.firstname)}}</div>
                                <div class="col">{{ form_row(form.lastname)}}</div>
                            </div>
                            <div class="row">
                                <div class="col">{{ form_row(form.phone)}}</div>
                                <div class="col">{{ form_row(form.email)}}</div>
                            </div>
                            {{ form_rest(form) }}
                            <div class="form-group">
                                <button class="btn btn-primary">
                                    Enviar
                                </button>
                            </div>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Related items section-->
    <section class="py-5 bg-light">
        <div class="container px-4 px-lg-5 mt-5">
            <h2 class="fw-bolder mb-4">Related products</h2>
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                <div class="col mb-5">
                    <div class="card h-100">
                        <!-- Product image-->
                        <img class="card-img-top" src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" alt="..." />
                        <!-- Product details-->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <!-- Product name-->
                                <h5 class="fw-bolder">Fancy Product</h5>
                                <!-- Product price-->
                                $40.00 - $80.00
                            </div>
                        </div>
                        <!-- Product actions-->
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="#">View options</a></div>
                        </div>
                    </div>
                </div>
                <div class="col mb-5">
                    <div class="card h-100">
                        <!-- Sale badge-->
                        <div class="badge bg-dark text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Sale</div>
                        <!-- Product image-->
                        <img class="card-img-top" src="https://dummyimage.com/450x300/dee2e6/6c757d.jpg" alt="..." />
                        <!-- Product details-->
                        <div class="card-body p-4">
                            <div class="text-center">
                                <!-- Product name-->
                                <h5 class="fw-bolder">Special Item</h5>
                                <!-- Product reviews-->
                                <div class="d-flex justify-content-center small text-warning mb-2">
                                    <div class="bi-star-fill"></div>
                                    <div class="bi-star-fill"></div>
                                    <div class="bi-star-fill"></div>
                                    <div class="bi-star-fill"></div>
                                    <div class="bi-star-fill"></div>
                                </div>
                                <!-- Product price-->
                                <span class="text-muted text-decoration-line-through">$20.00</span>
                                $18.00
                            </div>
                        </div>
                        <!-- Product actions-->
                        <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                            <div class="text-center"><a class="btn btn-outline-dark mt-auto" href="#">Add to cart</a></div>
                        </div>
